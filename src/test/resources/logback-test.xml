<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <!--https://goddaehee.tistory.com/206-->
    <appender name="debugFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 파일경로 설정 -->
        <file>${TICKET_APP_LOG_PATH}/ticket-debug.log</file>
        <!-- 출력패턴 설정-->
        <encoder>
            <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS, GMT+9} %-5level %C{0}/%M:%L %msg%n</Pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- .gz,.zip 등을 넣으면 자동 일자별 로그파일 압축 -->
            <fileNamePattern>${TICKET_APP_LOG_PATH}/ticket-debug.%d{yyyy-MM-dd, GMT+9}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <!-- 파일당 최고 용량 kb, mb, gb -->
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <!-- 일자별 로그파일 최대 보관주기(~일), 해당 설정일 이상된 파일은 자동으로 제거-->
            <!--<maxHistory>365</maxHistory>-->
        </rollingPolicy>
    </appender>

    <appender name="errorFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>error</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <file>${TICKET_APP_LOG_PATH}/ticket-error.log</file>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS, GMT+9} %-5level %C{0}/%M:%L %msg%n</Pattern>
        </layout>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${TICKET_APP_LOG_PATH}/ticket-error.%d{yyyy-MM-dd, GMT+9}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <!-- 일자별 로그파일 최대 보관주기(~일), 해당 설정일 이상된 파일은 자동으로 제거-->
            <!--<maxHistory>365</maxHistory>-->
        </rollingPolicy>
    </appender>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS, GMT+9} %-5level %C{0}/%M:%L %msg%n</Pattern>
        </layout>
    </appender>

    <appender name="STDOUT_DEBUG" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS, GMT+9} %-5level %C{0}/%M:%L %msg%n</Pattern>
        </layout>
    </appender>

    <logger name="com.sk.bds.ticket.api.data.model.LogItem" level="trace">
        <appender-ref ref="errorFileAppender"/>
	<appender-ref ref="debugFileAppender"/>
        <appender-ref ref="STDOUT_DEBUG"/>
    </logger>

    <logger name="org.mybatis.spring" level="WARN"></logger>
    <logger name="org.springframework" level="WARN"></logger>
    <logger name="com.zaxxer.hikari" level="WARN"></logger>
    <logger name="org.apache.http" level="WARN"></logger>

    <root level="debug">
        <appender-ref ref="STDOUT_DEBUG"/>
        <appender-ref ref="debugFileAppender"/>
    </root>
</configuration>